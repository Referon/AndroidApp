<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.LikeCheckBox" parent="Widget.MaterialComponents.Button.TextButton.Icon">

        <item name="iconTint">@color/liked_tint_selector</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>

    </style>

    <style name="Widget.App.ShareCheckBox" parent="Widget.MaterialComponents.Button.TextButton.Icon">

        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>

    </style>

    <style name="Widget.App.OptionsCheckBox" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>

    </style>

    <style name="Widget.App.ViewsCheckBox" parent="Widget.MaterialComponents.Button.TextButton.Icon">

        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>

    </style>

</resources>