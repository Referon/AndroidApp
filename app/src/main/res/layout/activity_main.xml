<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/toolsTop2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_post"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/toolsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="content,save"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/toolsTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="ic_edit, editMessgae"/>

    <EditText
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/post_text"
        android:maxLines="6"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="@dimen/common_spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/save"
        app:layout_constraintTop_toTopOf="@id/toolsTop"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_28"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/common_spacing"/>



    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        android:visibility="visible"
        app:constraint_referenced_ids="editMessgae, ic_edit, contentToEdit, closeEdit,topLineToEdit"
        tools:ignore="NotSibling" />

    <ImageView
        android:id="@+id/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_24"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        android:paddingStart="@dimen/common_spacing"
        android:paddingTop="@dimen/common_spacing"
        android:paddingBottom="@dimen/common_spacing"/>

    <TextView
        android:id="@+id/editMessgae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        app:layout_constraintStart_toEndOf="@id/ic_edit"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/toolsTop2"
        android:paddingStart="@dimen/common_spacing"
        android:paddingBottom="@dimen/common_spacing"
        android:text="@string/edit_message"/>

    <TextView
        android:id="@+id/contentToEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:padding="@dimen/common_spacing"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/closeEdit"
        app:layout_constraintTop_toTopOf="@id/editMessgae"
        android:paddingTop="@dimen/common_spacing"
        app:layout_constraintStart_toEndOf="@id/ic_edit"
        tools:text="messgae"/>

    <ImageButton
        android:id="@+id/closeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/toolsTop2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        android:paddingEnd="@dimen/common_spacing"/>

    <View
        android:id="@+id/topLineToEdit"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/toolsTop2"
        app:layout_constraintTop_toTopOf="@id/toolsTop2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/silver" />

    <View
        android:id="@+id/bottomLineToEdit"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/toolsTop"
        app:layout_constraintTop_toTopOf="@id/toolsTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/silver" />



</androidx.constraintlayout.widget.ConstraintLayout>